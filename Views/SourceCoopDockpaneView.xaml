<UserControl x:Class="DuckDBGeoparquet.Views.SourceCoopDockpaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:ui="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component/Themes/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource Esri_ControlBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource Esri_Blue}" Padding="10">
            <StackPanel>
                <TextBlock Text="Source Cooperative" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Community Data Repository Browser" 
                          FontSize="12" 
                          Foreground="White" 
                          Opacity="0.8"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="15" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Welcome Message -->
                <Border Background="{DynamicResource Esri_GrayBackgroundBrush}" 
                       BorderBrush="{DynamicResource Esri_BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="4" 
                       Padding="15"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸŒ Source Cooperative Integration" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" 
                                  Foreground="{DynamicResource Esri_TextControlBrush}">
                            Browse and download datasets from Source Cooperative, 
                            a data publishing utility for trusted organizations and individuals 
                            to share geospatial data using standard HTTP methods.
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- Feature Preview -->
                <Border Background="{DynamicResource Esri_ControlBackgroundBrush}" 
                       BorderBrush="{DynamicResource Esri_BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="4" 
                       Padding="15"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸš§ Coming Soon" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Planned Features:" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,8"/>
                        
                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="â€¢ Browse community datasets" Margin="0,2"/>
                            <TextBlock Text="â€¢ Search and filter by format/organization" Margin="0,2"/>
                            <TextBlock Text="â€¢ Download GeoParquet, Parquet, and COG files" Margin="0,2"/>
                            <TextBlock Text="â€¢ Automatic integration with ArcGIS Pro" Margin="0,2"/>
                            <TextBlock Text="â€¢ Spatial filtering capabilities" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Links -->
                <Border Background="{DynamicResource Esri_ControlBackgroundBrush}" 
                       BorderBrush="{DynamicResource Esri_BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="4" 
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸ”— Learn More" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock TextWrapping="Wrap">
                            Visit <Hyperlink NavigateUri="https://source.coop" RequestNavigate="Hyperlink_RequestNavigate">source.coop</Hyperlink> 
                            to explore available datasets and learn more about the platform.
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,8,0,0">
                            Source Cooperative is a Radiant Earth initiative providing 
                            standardized access to community geospatial data.
                        </TextBlock>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
               Background="{DynamicResource Esri_GrayBackgroundBrush}" 
               BorderBrush="{DynamicResource Esri_BorderBrush}" 
               BorderThickness="0,1,0,0" 
               Padding="10,5">
            <TextBlock Text="{Binding StatusText}" 
                      FontSize="11" 
                      Foreground="{DynamicResource Esri_TextControlBrush}"/>
        </Border>
        
    </Grid>
</UserControl> 